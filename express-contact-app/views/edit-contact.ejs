<div class="form-container">
  <h2>Form Ubah Data Contact</h2>

  <% if (typeof errors != 'undefined') { %>
    <div class="alert" role="alert">
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form method="post" action="/contact/update" class="form">
    <input type="hidden" name="oldNama" value="<%=  contact.oldNama || contact.nama %>">
    <div class="input">
      <label for="nama">Nama</label>
      <input type="text" id="nama" name="nama" required value="<%= contact.nama %>">
    </div>
    <div class="input">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required value="<%= contact.email %>">
    </div>
    <div class="input">
      <label for="nohp">No Handphone</label>
      <input type="text" id="nohp" name="nohp" required value="<%= contact.nohp %>">
    </div>
    <div class="input">
      <label for="alamat">Alamat</label>
      <input type="text" id="alamat" name="alamat" required value="<%= contact.alamat %>">
    </div>
    <button type="submit">Edit</button>
  </form>
</div>